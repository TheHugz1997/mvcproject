<html>
    <head>
        <meta charset="utf-8"/>
        <link rel="stylesheet" type="text/css" href="panier_look.css" />
    </head>
    <body>
        <h1>IT Academy</h1>
        <p>Panier</p>
        <div id="conteneur1">
            <form method="post">
                <button type="submit" name="panier" formaction="/final">Finaliser l'inscription</button>
            </form>
            <form method="get">
                <button type="submit" name="user" formaction="/return">Retourner au catalogue de formation</button>
            </form>
        </div>
        <div id="conteneur">
            <div class="conteneur2">
                <div class="title">Id</div>
                <% for (let i=0 ; i < lessons.length ;i++) {%>
                    <div class="lessons"> 
                        <%= lessons[i].id %>
                    </div>
                <% } %>
            </div>
            <div class="conteneur2">
                <div class="title">Nom</div>
                <% for (let i=0 ; i < lessons.length ;i++) {%>
                    <div class="lessons"> 
                        <%= lessons[i].formations_name %>
                    </div>
                <% } %>
            </div>
            <div class="conteneur2">
                <div class="title">Prix</div>
                <% for (let i=0 ; i < lessons.length ;i++) {%>
                    <div class="lessons"> 
                        <%= lessons[i].prix %>
                    </div>
                <% } %>
            </div>
            <div class="conteneur2">
                <div class="title">Debut</div>
                <% for (let i=0 ; i < lessons.length ;i++) {%>
                    <div class="lessons"> 
                        <%= lessons[i].debut %>
                    </div>
                <% } %>
            </div>
            <div class="conteneur2">
                <div class="title">Fin</div>
                <% for (let i=0 ; i < lessons.length ;i++) {%>
                    <div class="lessons"> 
                        <%= lessons[i].fin %>
                    </div>
                <% } %>
            </div>
            <div class="conteneur2">
                <div class="title"></div>
                <% for (let i=0 ; i < lessons.length ;i++) {%>
                    <div class="lessons"> 
                        <form action="/delformation" method="post">
                            <button type="submit" name="<%= lessons[i].formations_name %> ">Supprimer</button>
                        </form>
                    </div>
                <% } %>
            </div>
        </div>
    </body>
</html>